<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:systemui="http://schemas.android.com/apk/res-auto"
        android:key="navigation_keys_dimmer_settings"
        android:title="@string/navigation_keys_dimmer_title">

     <SwitchPreference
            android:key="navigation_keys_always_dim"
            android:title="@string/navigation_keys_always_dim_title"
            android:summaryOn="@string/navigation_keys_always_dim_summary_on"
            android:summaryOff="@string/navigation_keys_always_dim_summary_off"
            android:persistent="false" />

    <com.android.systemui.tuner.CustomSeekBarPreference
            android:key="navigation_keys_lightsin_alpha"
            android:title="@string/navigation_keys_lightsin_alpha_title"
            android:summary="@string/navigation_keys_lightsin_alpha_summary"
            systemui:maximum="100"
            systemui:minimum="0"
            systemui:interval="1"
            systemui:units="%"
            android:persistent="false" />

    <com.android.systemui.tuner.CustomSeekBarPreference
            android:key="navigation_keys_lightsout_alpha"
            android:title="@string/navigation_keys_lightsout_alpha_title"
            android:summary="@string/navigation_keys_lightsout_alpha_summary"
            systemui:maximum="100"
            systemui:minimum="0"
            systemui:interval="1"
            systemui:units="%"
            android:persistent="false" />

    <com.android.systemui.tuner.CustomSeekBarPreference
            android:key="navigation_keys_lightsin_duration"
            android:title="@string/navigation_keys_lightsin_duration_title"
            android:summary="@string/navigation_keys_lightsin_duration_summary"
            systemui:maximum="10000"
            systemui:minimum="0"
            systemui:interval="50"
            systemui:units="ms"
            android:persistent="false" />

    <com.android.systemui.tuner.CustomSeekBarPreference
            android:key="navigation_keys_lightsout_delay"
            android:title="@string/navigation_keys_lightsout_delay_title"
            android:summary="@string/navigation_keys_lightsout_delay_summary"
            systemui:maximum="10000"
            systemui:minimum="0"
            systemui:interval="50"
            systemui:units="ms"
            android:persistent="false" />

    <com.android.systemui.tuner.CustomSeekBarPreference
            android:key="navigation_keys_lightsout_duration"
            android:title="@string/navigation_keys_lightsout_duration_title"
            android:summary="@string/navigation_keys_lightsout_duration_summary"
            systemui:maximum="10000"
            systemui:minimum="0"
            systemui:interval="50"
            systemui:units="ms"
            android:persistent="false" />

</PreferenceScreen>
